{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" name="id" value="{{postagens._id}}">
            <label for="titulo" class="mt-2" >Titulo:</label>
            <input type="text" name="titulo"  class="form-control" value="{{postagens.titulo}}">
            <label for="slug" class="mt-2">Slug:</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagens.slug}}" >
            <label for="descricao" class="mt-2">Descrição:</label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagens.descricao}}">
            <label for="conteudo" class="mt-2">Conteudo:</label>
            <textarea name="conteudo" id="conteudo" class="form-control" >{{postagens.conteudo}}</textarea>
            <label for="categoria" class="mt-2">Categoria:</label>
            <select name="categoria" class="form-select" id="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Sem categotia</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success mt-4">Adicionar Postagem</button>
        </form>
    </div>
</div>